<h2>Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4>Description:</h4>
  <hr><%= simple_format(@article.description) %></hr>
  <p><%= link_to 'Back', articles_path %></p>
  <p><%= link_to 'Edit', edit_article_path(@article) %></p>
  <p><%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %></p>
</div>
